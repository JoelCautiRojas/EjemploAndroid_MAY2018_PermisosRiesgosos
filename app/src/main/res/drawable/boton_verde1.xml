<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <gradient
                android:angle="315"
                android:startColor="#20be8e"
                android:centerColor="#16b181"
                android:endColor="#139c72"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>

            <corners
                android:radius="3dp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <gradient
                android:angle="315"
                android:startColor="#1fca96"
                android:centerColor="#14ba87"
                android:endColor="#11a678"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
</selector>